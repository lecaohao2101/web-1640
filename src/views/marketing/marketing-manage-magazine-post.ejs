<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Magazine Posts</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #3a7efc;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            font-weight: bold;
        }

        .topnav a {
            color: #f2f2f2;
            text-align: center;
            padding: 14px 13px;
            text-decoration: none;
            font-size: 17px;
            font-weight: bold;
        }

        .topnav a:hover {
            background-color: #3499d0;
            color: black;
        }

        .topnav a.active {
            color: white;
        }
        .logo img {
            height: 50px;
            width: auto;
            vertical-align: middle;
            margin-right: 10px;
        }
        .nav{
            flex: 1;
        }

        button {
            background-color: #3a7efc;
            color: white;
            padding: 14px 30px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-size: 17px;
            font-weight: bold;
        }

        button:hover {
            opacity: 0.8;
            background-color: #3499d0;

        }
        @media screen and (max-width: 600px) {
            .topnav {
                flex-direction: column;
            }

            .topnav a {
                padding: 10px;
            }

            .logo img {
                height: 30px;
                margin-right: 0;
            }

            .container {
                padding: 10px;
            }

            .table th, .table td {
                padding: 8px;
            }
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border: 2px solid #ddd;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #3a7efc;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }


    </style>
</head>
<body>
<div class="topnav">
    <div class="logo"> <a class="active" href="/marketing/marketing-page"><img  src="https://cdn.haitrieu.com/wp-content/uploads/2022/12/Icon-Truong-Dai-hoc-Greenwich-Viet-Nam.png" alt="Logo"></a></div>

    <div class="nav">
        <a href="/marketing/dashboard/">Dashboard</a>
        <a href="/marketing/marketing-manage-student">Manage Student</a>
        <a href="/marketing/marketing-manage-post">Manage Post</a>
        <a href="/marketing/marketing-manage-magazine">Manage Magazine</a>
    </div>

    <div>
        <form action="/login_page" method="get">
            <button>Logout</button>
        </form>
    </div>

</div>
<br/>
<div class="container">

    <h1 style="text-align:center; font-weight:bold">Marketing - Manage Magazine Posts</h1>

    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>File</th>
            <th>Author</th>
<!--            <th>Created At</th>-->
<!--            <th>Updated At</th>-->
        </tr>
        </thead>
        <tbody>
        <% posts.forEach(post => { %>
            <tr>
                <td><%= post.article_title %></td>
                <td><%= post.article_content %></td>
                <td>
                    <% if (post.article_file) { %>
                        <a href="/uploads/<%= post.article_file %>" target="_blank"><%= post.article_file %></a>
                    <% } else { %>
                        N/A
                    <% } %>
                </td>
                <td><%= post.author_name %></td>
<!--                <td><%= post.article_created_at %></td>-->
<!--                <td><%= post.article_updated_at %></td>-->
            </tr>
        <% }) %>
        <tr>
            <td colspan="1" style="text-align: left;"><strong>Total Post:</strong></td>
            <td colspan="5" style="text-align: right;"><strong><%= posts.length %></strong></td>
        </tr>
        </tbody>

    </table>
</div>

<script>
    function formatDate(timestamp) {
        const options = {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
            hour: 'numeric',
            minute: 'numeric',
            second: 'numeric',
            hour12: false,
            timeZone: 'Asia/Ho_Chi_Minh'
        };
        return new Date(timestamp).toLocaleString('en-US', options);
    }
</script>
</body>
</html>
