<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Post with Comments</title>
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css"
            rel="stylesheet"
    />
</head>
<body>
<div class="container mt-5">
    <h1>View Post with Comments</h1>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">
                <%= post.article_title %> by <%= author.student_name %>
            </h5>
            <p class="card-text"><%= post.content %></p>
            <% if (post.attachmentType === 'image') { %>
                <img
                        src="<%= post.attachment %>"
                        class="img-fluid"
                        alt="Attachment"
                />
            <% } else if (post.attachmentType === 'document') { %>
                <p>
                    Attached document:
                    <a href="<%= post.attachment %>"><%= post.attachmentName %></a>
                </p>
            <% } %>
        </div>
    </div>

    <h2>Comments</h2>
    <table class="table" id="commentsTable">
        <thead>
        <tr>
            <th scope="col">Author</th>
            <th scope="col">Comment</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <h2>Add New Comment</h2>
    <div id="addCommentForm">
        <div class="mb-3">
            <label for="content" class="form-label">Comment</label>
            <textarea
                    class="form-control"
                    id="content"
                    name="content"
                    rows="3"
                    required
            ></textarea>
        </div>
        <button type="button" class="btn btn-primary" onclick="addComment()">
            Add Comment
        </button>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.24.0/axios.min.js"></script>
<script>
    function addComment() {
        const content = document.getElementById("content").value;
        const postId = "<%= post.article_id %>";
        axios
            .post(`/addComment/${postId}`, { content })
            .then((response) => {
                console.log(response.data);
                listComment()

                document.getElementById("content").value = "";
            })
            .catch((error) => {
                console.error("Error adding comment:", error);
            });
    }

    function updateCommentsTable(list) {
        return (document.querySelector("tbody").innerHTML = list.reverse()
            .map(
                (item) => `
        <tr>
          <td>${item.manager_name}</td>
          <td>${item.content}</td>
          </tr>
        `
            )
            .join(""));
    }

    const listComment = async () => {
        const postId = "<%= post.article_id %>";
        axios
            .get(`/api/comments/${postId}`)
            .then((response) => {
                const comments = response.data;
                updateCommentsTable(comments);
            })
            .catch((error) => {
                console.error("Error fetching comments:", error);
            });
    };
    listComment();
</script>
</body>
</html>
