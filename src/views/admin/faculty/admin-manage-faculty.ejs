<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Manage</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #3a7efc;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            font-weight: bold;
        }

        .topnav a {
            color: #f2f2f2;
            text-align: center;
            padding: 14px 13px;
            text-decoration: none;
            font-size: 17px;
            font-weight: bold;
        }

        .topnav a:hover {
            background-color: #3499d0;
            color: black;
        }

        .topnav a.active {
            color: white;
        }

        .logo img {
            height: 50px;
            width: auto;
            vertical-align: middle;
            margin-right: 10px;
        }

        .nav{
            flex: 1;
        }

        button {
            background-color: #3a7efc;
            color: white;
            padding: 14px 30px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-size: 17px;
            font-weight: bold;
        }

        button:hover {
            opacity: 0.8;
            background-color: #3499d0;

        }

        .container.mt-5 {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-danger {
            padding: 10px 20px;
            margin-right: 10px;
        }

        .btn-container {
            display: flex;
            align-items: center;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #f5f5f5;
        }

        .btn-container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-container .btn {
            margin: 5px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        @media screen and (max-width: 600px) {
            .topnav {
                flex-direction: column;
            }

            .topnav a {
                padding: 10px;
            }

            .logo img {
                height: 30px;
                margin-right: 0;
            }

            .container {
                padding: 10px;
            }

            .btn-container {
                flex-direction: column;
            }

            .table th, .table td {
                padding: 8px;
            }
        }


    </style>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>


<div class="topnav">
    <div class="logo"> <a class="active" href="/admin/admin_page"><img  src="https://cdn.haitrieu.com/wp-content/uploads/2022/12/Icon-Truong-Dai-hoc-Greenwich-Viet-Nam.png" alt="Logo"></a></div>

    <div class="nav">
        <a href="/admin/dashboard/analysis">Dashboard</a>
        <a href="/admin/faculty/admin-manage-faculty">Manage Faculty</a>
        <a href="/admin/coordinator/admin-manage-coordinator">Manage Coordinator</a>
        <a href="/admin/marketing/admin-manage-marketing">Manage Marketing</a>
        <a href="/admin/faculty/student">Manage Student</a>
        <a href="/admin/magazine/admin-manage-magazine">Manage Magazine</a>
        <a href="/admin/post/admin-manage-post">Manage Post</a>
        <a href="/admin/session/admin-manage-session">Manage Session</a>
    </div>

    <div>
        <form action="/login_page" method="get">
            <button>Logout</button>
        </form>
    </div>

</div>
<div class="container mt-5">
    <h1 style="font-weight: bold">Admin - Manage Faculty</h1>
    <a href="/admin/faculty/admin-add-faculty" class="btn btn-primary">Create Faculty</a>


    <table class="table">
        <thead>
        <tr>

            <th scope="col">Faculty Name</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% departments.forEach((department) => { %>
            <tr>

                <td><%= department.department_name %></td>
                <td class="btn-container">
                    <a href="/admin/faculty/admin-edit-faculty/<%= department.department_id %>" class="btn btn-primary">Edit</a>
                    <form action="/admin/faculty/admin-delete-faculty/<%= department.department_id %>" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>

            </tr>
        <% }); %>
        <tr>
            <td colspan="1" style="text-align: left;"><strong>Total Magazine:</strong></td>
            <td colspan="3" style="text-align: right;"><strong><%= departments.length %></strong></td>
        </tr>
        </tbody>
    </table>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
